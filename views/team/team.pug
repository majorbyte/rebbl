    function WinLossCounter() {
      const counter = {
        races: {},
        win: ko.observable(0),
        draw: ko.observable(0),
        loss: ko.observable(0),
      };
      counter.get_race = function(id) {
        this.races[id] = this.races[id] || WinLossCounter();
        return this.races[id];
      }

      counter.all = ko.computed(function() {
          return this.win() +  this.draw() + this.loss();
      }, counter);
      
      counter.ratio = function(result) {
        return ko.computed(function() {
            if (this.all() > 0) {
              return ((this[result]() * 100) / this.all()).toFixed(1);
            }
            return 0;
          }, counter);
        }
      
      counter.addWin = function(raceid) {
        this.races[raceid] = this.races[raceid] || WinLossCounter();
        this.races[raceid].win(this.races[raceid].win() + 1);
        this.win(this.win() + 1);
      };
      counter.addLoss = function(raceid) {
        this.races[raceid] = this.races[raceid] || WinLossCounter();
        this.races[raceid].loss(this.races[raceid].loss() + 1);
        this.loss(this.loss() + 1);
      };
      counter.addDraw = function(raceid) {
        this.races[raceid] = this.races[raceid] || WinLossCounter();
        this.races[raceid].draw(this.races[raceid].draw() + 1);
        this.draw(this.draw() + 1);
      };
      return counter;
    }

