        setCalendarDatetime();
      });  
  - if (!user)      
    script.
      $(document).ready(function(){
        let timezones = $(".timezone");
        timezones.each(function(zone){
          if (zone == null) return;
          
          $(timezones[zone]).find(".time").text(moment().tz($(timezones[zone]).text()).format('YYYY-MM-DD HH:mm ZZ'));
