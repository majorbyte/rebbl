extends layout.pug

include functions.pug 

block head
  style.
    h2{margin-top:0px;margin-bottom:0px;margin-right:15px}
    // .card{width: 12rem;}
    .coach-container{
        width: 100%;
        height: 120px;

        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
        background-origin: border-box;
        display:flex;

    }
    .container-default{
        background-image: url(https://cdn.rebbl.net/images/bb3/coach/banner/txt_gamer_banner_002.png); 
    }
    .coach{
        width: 120px;
        max-width: 100%;
        height: 120px;
        background-position: left top, left top;
        background-repeat: no-repeat, no-repeat;
        background-size: contain, contain;
        background-origin: content-box, padding-box;
    }
    .coach-default{
        background-image: 
            url(https://cdn.rebbl.net/images/bb3/coach/frame/txt_gamer_frame_001.png),
            url(https://cdn.rebbl.net/images/bb3/coach/avatar/txt_gamer_avatar_human_humanLineman.png); 
    }
    .place-container{
      width:120px;
      height:120px
    }

    .profile-sidebar {
        background: linear-gradient(135deg, #4158D0 0%, #C850C0 100%);
    }

    .nav-pills .nav-link {
        color: #6c757d;
        border-radius: 10px;
        padding: 12px 20px;
        margin: 4px 0;
        transition: all 0.3s ease;
    }

    .nav-pills .nav-link:hover {
        background-color: #f8f9fa;
    }

    .nav-pills .nav-link.active {
        background-color: #fff;
        color: #4158D0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

     .profile-pic {
        width: 120px;
        height: 120px;
        border: 4px solid #fff;
        margin-top: -60px;
        background-color: #fff;
    }

    .settings-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .settings-card:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        margin-left: -3.5em;
    }

    .activity-item {
        border-left: 2px solid #e9ecef;
        padding-left: 20px;
        position: relative;
    }

    .activity-item::before {
        content: '';
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #4158D0;
        position: absolute;
        left: -7px;
        top: 5px;
    }


block content
  .container.py-5
    .row
      // Profile Header
      .col-12.mb-4
        .text-center
          .position-relative.d-inline-block
            .coach-container(style=`background-image: url(https://cdn.rebbl.net/images/bb3/coach/banner/${coach.info.banner}.png) `)
              .coach(style=`background-image: url(https://cdn.rebbl.net/images/bb3/coach/frame/${coach.info.frame}.png),url(https://cdn.rebbl.net/images/bb3/coach/avatar/${coach.info.avatar}.png); `)
          h2.mt-3.mb-1= coach.bb3coach
          h3.text-muted.mb-3= coach.info.title
          h4.text-center
            label.form-label= `Level ${coach.info.level}`
            .mx-auto(style="width:200px")
              .progress.mx-2(role="progressbar" aria-label="Basic example" aria-valuenow=coach.info.progression.xp aria-valuemin="0" aria-valuemax=coach.info.progression.xpNeeded title=`${coach.info.progression.xp}/${coach.info.progression.xpNeeded}`)
                .progress-bar.progress-bar-striped(style=`width: ${Math.floor(coach.info.progression.xp * 100 / coach.info.progression.xpNeeded)}%` title=`${coach.info.progression.xp}/${coach.info.progression.xpNeeded}`)

          .d-flex.justify-content-center.gap-2.mb-4
            a.button.btn.btn-outline-primary(href=`https://old.reddit.com/u/${coach.reddit}` target="_blank")
              i.fas.fa-envelope.me-2
              | Message
            if (coach.discordId)
              a.button.btn.btn-primary(href=`https://discord.com/users/${coach.discordId}` target="_blank")
                i.fas.fa-user-plus.me-2
                | Connect
      // Main Content
      .col-12
        .card.col-12.border-0.shadow-sm
          .card-body.p-0
            .row.g-0
              // Sidebar
              //.col-lg-3.border-end
                .p-4
                  .nav.flex-column.nav-pills
                    a.nav-link.active(href='#')
                      i.fas.fa-user.me-2
                      | Coach details
                    a.nav-link(href='#')
                      i.fas.fa-lock.me-2
                      | Teams
                    a.nav-link(href='#')
                      i.fas.fa-bell.me-2
                      | Matches
                    a.nav-link(href='#')
                      i.fas.fa-credit-card.me-2
                      | Trophies
              // Content Area
              .col-lg-12
                .p-4
                  // Personal Information
                  .mb-4
                    h5.mb-4 Coach details
                    .row.g-3
                      .col-md-6
                        label.form-label Reddit
                        input.form-control(type='text' value=coach.reddit disabled)
                      .col-md-6
                        label.form-label Discord 
                        input.form-control(type='text' value=coach.discord disabled)

                      .col-md-6
                        case coach.bb3service
                          when "steam"
                            - src = "https://cdn.rebbl.net/images/bb3/SteamLogo.png"
                          when "psn"
                            - src = "https://cdn.rebbl.net/images/bb3/PSNLogo.png"
                          when "switch"
                            - src = "https://cdn.rebbl.net/images/bb3/SwitchLogo.png"
                          when "xbl"
                            - src = "https://cdn.rebbl.net/images/bb3/XboxLiveLogo.png"
                          when "eos"
                            - src = "https://cdn.rebbl.net/images/bb3/EpicLogo.png"
                        label.form-label 
                          img#bb3coachService(style="width:32px" src=src)                      
                        input.form-control(type='tel' value=coach.bb3displayId disabled)
                      .col-md-6
                        label.form-label Timezone
                        input.form-control(type='text' value=coach.timezone disabled)
                      if coach.steam
                        .col-md-6
                          label.form-label Steam 
                          input.form-control(type='text' value=coach.steam disabled)
                      .col-12
                        label.form-label Bio
                        textarea.form-control(rows='4')
                          | Product designer with 5+ years of experience in creating user-centered digital solutions. Passionate about solving complex problems through simple and elegant designs.
                  // Recent Activity
                  div
                    h5.mb-4 Recent Activity
                    .activity-item.mb-3
                      h6.mb-1 Greenhorn Cup - round 1
                      p.text-muted.small.mb-0 2 hours ago
                    .activity-item.mb-3
                      h6.mb-1 Greenhorn Cup - round 1
                      p.text-muted.small.mb-0 7 days ago
                    .activity-item
                      h6.mb-1 GMan Fresh - Round 8
                      p.text-muted.small.mb-0 3 weeks ago
