extends ..\layout.pug

block navigation
  - var options = {rounds : rounds, round: round}
  - var activeRound = (options && options.round) ? options.round : 0
  - var renderRounds = (options && options.rounds) ? options.rounds : [1,2,3,4,5,6]
  - var textRound =  (options && options.text) ? options.text : "Round "
  div(class="Tabs Tabs--darkBackground")
    div(class="Tabs-header-wrapper")
      div(class="Tabs-header")
        div(class="Tabs-scroller-wrapper")
          div(class="Tabs-scroller")
            nav(class="Tabs-bar container")
              a(href="/wcq" class="Tabs-tab" + (activeRound == 0 ? " Tabs-tab--active" : "") ) Standings
              each round in renderRounds
                a(class="Tabs-tab"  + (activeRound == round ? " Tabs-tab--active" : "") href="/wcq/round/"+round)= textRound + round

