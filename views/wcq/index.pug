                        span(class="Standings-dividerText--correction")
                    div(class="Standings-divider")
                      div(class="Standings-divider--flex")
                        span(class="Standings-dividerText--correction")
                    div(class="Standings-divider")
                      div(class="Standings-divider--flex")
                        span(class="Standings-dividerText--correction")
                    div(class="Standings-divider")
                      div(class="Standings-divider--flex")
                        span(class="Standings-dividerText--correction")
                    div(class="Standings-divider")
